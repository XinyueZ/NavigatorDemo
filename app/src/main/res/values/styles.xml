<resources>

    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">12dp</item>
        <item name="android:popupTheme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ToolbarTheme</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="elevation">12dp</item>

    </style>

    <!--For actionbar or toolbar.-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
    </style>

</resources>
