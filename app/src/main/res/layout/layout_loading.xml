<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_material_padding_margin_medium"
        android:orientation="vertical"
        tools:showIn="@layout/fragment_navigator">

        <View
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/common_material_padding_margin_large"
            android:background="@drawable/round_gray_rectangle"/>

        <View
            android:layout_width="130dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/common_material_padding_margin_large"
            android:background="@drawable/round_gray_rectangle"/>

        <View
            android:layout_width="110dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/common_material_padding_margin_large"
            android:background="@drawable/round_gray_rectangle"/>

        <View
            android:layout_width="90dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/common_material_padding_margin_large"
            android:background="@drawable/round_gray_rectangle"/>

        <View
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/common_material_padding_margin_large"
            android:background="@drawable/round_gray_rectangle"/>

        <View
            android:layout_width="70dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/common_material_padding_margin_large"
            android:background="@drawable/round_gray_rectangle"/>
    </LinearLayout>
</merge>